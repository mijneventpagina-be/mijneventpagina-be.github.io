{{> header }}

<!-- Start Content -->
<div class="container py-5">
	<div class="row">

		<div class="col-lg-3">
			<h1 class="h2 pb-4">CategorieÃ«n</h1>
			<ul class="list-unstyled">
				{{#each collections}}
					{{#if_eq @key 'artikelen'}}
						<a class="d-flex justify-content-between h3 text-decoration-none" style="color: #000;" href="{{../rootPath}}{{@key}}.html">Alle</a>
					{{else}}
					<li>
						<a class="d-flex justify-content-between h3 text-decoration-none" style="color: #000;" href="{{../rootPath}}{{@key}}.html">{{ @key }}</a>
					</li>
					{{/if_eq}}
				{{/each}}
			</ul>
		</div>

		<div class="col-lg-9">
			<div class="row">
				<div class="col-md-4">
					<h2>
						{{#if_eq collectionName 'artikelen'}}
							Alle artikelen
						{{else}}
							{{../collectionName}}
						{{/if_eq}}
					</h2>
				</div>
			</div>

			<div class="row">
				{{#each collectionItems}}
					<div class="col-md-4">
						<div class="card mb-4 product-wap rounded-0">
							<a href="{{path}}"><span></span></a>
							<div class="card rounded-0">
								<img class="card-img rounded-0 img-fluid" src="{{../rootPath}}{{first images}}" alt="{{title}}">
								{{!-- <a class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center" href="{{path}}"> --}}
								<div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
									<ul class="list-unstyled">
										{{!-- <li><a class="btn btn-success text-white top" href="shop-single.html"><i class="far fa-heart"></i></a></li> --}}
										<li><a class="btn btn-success text-white mt-2 top" href="{{path}}"><i class="far fa-eye"></i></a></li>
										{{!-- <li><a class="btn btn-success text-white mt-2 top" href="shop-single.html"><i class="fas fa-cart-plus"></i></a></li> --}}
									</ul>
								</div>
							</div>
							<div class="card-body">
								<a href="{{path}}" class="h3 text-decoration-none top">{{title}}</a>
								<ul class="w-100 list-unstyled d-flex justify-content-between mb-0 top">
									{{#if variations}}
										<li>{{variations}}</li>
									{{/if}}
									{{#if colors}}
										<li class="pt-2">
											{{#each colors}}
												<span class="product-color-dot float-left rounded-circle ml-1" style="background-color: {{this}};"></span>
											{{/each}}
										</li>
									{{/if}}
								</ul>
								{{!-- <ul class="list-unstyled d-flex justify-content-center mb-1">
									<li>
										<i class="text-warning fa fa-star"></i>
										<i class="text-warning fa fa-star"></i>
										<i class="text-warning fa fa-star"></i>
										<i class="text-muted fa fa-star"></i>
										<i class="text-muted fa fa-star"></i>
									</li>
								</ul> --}}
								{{#if price}}
									<p class="text-center mb-0">{{format_price price}}</p>
								{{/if}}
							</div>
						</div>
					</div>
				{{/each}}
			</div>
			{{!-- <div div="row">
				<ul class="pagination pagination-lg justify-content-end">
					<li class="page-item disabled">
						<a class="page-link active rounded-0 mr-3 shadow-sm border-top-0 border-left-0" href="#" tabindex="-1">1</a>
					</li>
					<li class="page-item">
						<a class="page-link rounded-0 mr-3 shadow-sm border-top-0 border-left-0 text-dark" href="#">2</a>
					</li>
					<li class="page-item">
						<a class="page-link rounded-0 shadow-sm border-top-0 border-left-0 text-dark" href="#">3</a>
					</li>
				</ul>
			</div> --}}
		</div>

	</div>
</div>
